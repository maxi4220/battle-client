{
	"compilerOptions": {
    "outDir": "public",
		"target": "es2017",
		"module": "esnext",
		"esModuleInterop": true,
		"rootDir": "./src/ts/",
		"sourceMap": true,
		"moduleResolution": "node",
		"skipLibCheck": true
	},
  "include": [
    "src/**/*", 
    "src/**/**/*", 
		"src/index.js"],
		"exclude": ["node_modules", "src/**/*.spec.ts"]
}
